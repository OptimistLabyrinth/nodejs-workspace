{
  "name": "nodejs-express-application",
  "version": "1.0.0",
  "scripts": {
    "start": "yarn start:compile && yarn start:run",
    "start:compile": "tsc",
    "start:run": "NODE_ENV=production node dist/server.js",
    "start:dev": "NODE_ENV=development tsc-watch --onSuccess \"node dist/server.js\"",
    "clean": "rm -rf coverage dist",
    "test": "jest --forceExit",
    "test:dev": "jest --watch --forceExit",
    "test:unit": "jest --forceExit test/unit",
    "test:unit:dev": "jest --watch --forceExit test/unit",
    "test:e2e": "jest --forceExit test/e2e",
    "test:e2e:dev": "jest --watch --forceExit test/e2e",
    "lint": "eslint --fix ."
  },
  "author": "OptimistLabyrinth <keesung0705@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.2",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.3"
  }
}